<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>
    <title>Mercadinho - AGP</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= nav_bar brand: "Mercadinho AGP", brand_link: root_url,  responsive: true do %>
      <%= menu_group do %>
        <%= menu_item "Produtos", produtos_path %>
      <% end %>
      <%= menu_group pull: :right do %>
        <%= render 'layouts/account_links' %>
      <% end %>
    <% end %>

    <%= render 'layouts/flash_messages' %>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
