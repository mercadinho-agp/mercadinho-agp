<% content_for :head do %>
    <style>
        td div {
            display: flex;
            justify-content: flex-end;
        }
        .row .float-right{
            float: right;
        }
    </style>
<% end %>

<h2>Cadastro de novo produto</h2>
<div class="row">
    <div class="col-md-2 float-right">
      <%= button_to "< Cancelar", produtos_url, class: "btn btn-primary", form: { "method" => "get" } %>
    </div>
</div>
<br>

<div class="container">
</div>
<%= form_for( Produto.new ) do |form| %>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <%= form.label :nome_do_produto %>
                <%= form.text_field :name, class: 'form-control' %>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <%= form.label :preço %>
                <%= form.number_field :price, class: 'form-control', step: 0.01 %>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <%= form.label :quantidade %>
                <%= form.number_field :qnt, class: 'form-control', step: 1 %>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <%= form.label :descrição %>
                <%= form.text_area :description, class: 'form-control', rows: 4 %>
            </div>
        </div>
    </div>

    <%= form.submit "Cadastrar Produto", class: "btn btn-primary mb-2 font-weight-bold" %>

<% end %>