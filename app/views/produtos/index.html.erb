<% content_for :head do %>
    <style>
        td div {
            display: flex;
            justify-content: flex-end;
        }
        .row .float-right{
            float: right;
        }
    </style>
<% end %>

<h2>Produtos do Mercadinho</h2>
<div class="row">
    <div class="col-md-2 float-right">
      <%= button_to "Novo Produto", new_produto_url, class: "btn btn-primary", form: { "method" => "get" } %>
    </div>
</div>
<br>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Produto</th>
      <th scope="col">Descricao</th>
      <th scope="col">Quantidade</th>
      <th scope="col">Preço</th>
      <th scope="col" style="text-align: right;">Ações</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">1</th>
      <td>Sabonete</td>
      <td>Frangancia de coco da praia</td>
      <td>200</td>
      <td>2.89</td>
      <td>
        <div>
        <%= button_to "Edit", edit_produto_path(1), class:'btn btn-primary btn-sm', form: { "method" => "get" }%>&nbsp;
        <%= button_to "Delete", 'produto/1', class:'btn btn-danger btn-sm', form: { "method" => "delete" },
            data: {confirm: "Deseja realmente excluir este produto?  \nProduto: \#{}"} %>
        </div>
      </td>
    </tr>
    <tr>
      <th scope="row">2</th>
      <td>Arroz</td>
      <td>Tipo 1, 5kg</td>
      <td>35</td>
      <td>11.99</td>
      <td>
        <div>
        <%= button_to "Edit", edit_produto_path(1), class:'btn btn-primary btn-sm' %>&nbsp;
        <%= button_to "Delete", 'produto/1', class:'btn btn-danger btn-sm', form: { "method" => "delete" },
            data: {confirm: "Deseja realmente excluir este produto? \nProduto: \#{}"}  %>
        </div>
      </td>
    </tr>
    <tr>
      <th scope="row">3</th>
      <td colspan="2">Refigerante</td>
      <td>10</td>
      <td>8.99</td>
      <td>
        <div>
        <%= button_to "Edit", edit_produto_path(1), class:'btn btn-primary btn-sm' %>&nbsp;
        <%= button_to "Delete", 'produto/1', class:'btn btn-danger btn-sm', form: { "method" => "delete" },
            data: {confirm: "Deseja realmente excluir este produto?  \nProduto: \#{}"} %>
        </div>
      </td>
    </tr>
  </tbody>
</table>